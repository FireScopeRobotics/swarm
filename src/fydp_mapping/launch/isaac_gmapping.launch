<?xml version="1.0"?>
<launch>
    <arg name="robot1" value="carter1" />
    <node ns="$(arg robot1)" name="slam_gmapping" pkg="gmapping" type="slam_gmapping" output="screen">
        <param name="base_frame" value="$(arg robot1)/base_link" />
        <param name="odom_frame" value="$(arg robot1)/odom" />
        <param name="map_frame" value="$(arg robot1)/map" />
        <param name="transform_publish_period" value="0" />
    </node>
    <arg name="robot2" value="carter2" />
    <node ns="$(arg robot2)" name="slam_gmapping" pkg="gmapping" type="slam_gmapping" output="screen">
        <param name="base_frame" value="$(arg robot2)/base_link" />
        <param name="odom_frame" value="$(arg robot2)/odom" />
        <param name="map_frame" value="$(arg robot2)/map" />
        <param name="transform_publish_period" value="0" />
    </node>
    <arg name="robot3" value="carter3" />
    <node ns="$(arg robot3)" name="slam_gmapping" pkg="gmapping" type="slam_gmapping" output="screen">
        <param name="base_frame" value="$(arg robot3)/base_link" />
        <param name="odom_frame" value="$(arg robot3)/odom" />
        <param name="map_frame" value="$(arg robot3)/map" />
        <param name="transform_publish_period" value="0" />
    </node>
</launch>